{
  "manifest_version": 2,
  "name": "Container Tab Groups",
  "version": "__PLACEHOLDER__",
  "browser_specific_settings": {
    "gecko": {
      "id": "tab-array@menhera.org",
      "strict_min_version": "102.0"
    }
  },
  "default_locale": "en",
  "author": "Menhera.org",
  "homepage_url": "https://github.com/menhera-org/TabArray",
  "description": "__MSG_extensionDescription__",
  "permissions": [
    "tabs",
    "tabHide",
    "tabGroups",
    "<all_urls>",
    "cookies",
    "contextualIdentities",
    "menus",
    "menus.overrideContext",
    "storage",
    "browserSettings",
    "privacy",
    "webRequest",
    "webRequestBlocking",
    "sessions",
    "browsingData",
    "theme",
    "alarms",
    "scripting",
    "proxy"
  ],
  "incognito": "spanning",
  "background": {
    "page": "background/background.html"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "img/toolbar/toolbar-icon-black.svg"
    },
    "default_title": "__MSG_browserActionTitle__",
    "default_popup": "pages/popup-v2/popup-v2.html?popup=1",
    "default_area": "tabstrip",
    "theme_icons": [
      {
        "size": 16,
        "light": "img/toolbar/toolbar-icon-white.svg",
        "dark": "img/toolbar/toolbar-icon-black.svg"
      }
    ]
  },
  "options_ui": {
    "page": "pages/options/options.html",
    "browser_style": true,
    "open_in_tab": false
  },
  "sidebar_action": {
    "browser_style": true,
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg"
    },
    "default_panel": "pages/popup-v2/popup-v2.html"
  },
  "page_action": {
    "browser_style": true,
    "default_icon": {
      "19": "icon.svg",
      "38": "icon.svg"
    },
    "default_title": "__MSG_headingReopen__",
    "default_popup": "pages/page-action/page-action.html",
    "show_matches": [
      "*://*/*"
    ]
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Alt+G"
      },
      "description": "__MSG_commandOpenPopup__"
    },
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Alt+S"
      },
      "description": "__MSG_commandOpenSidebar__"
    },
    "open_panorama_grid": {
      "suggested_key": {
        "default": "Ctrl+Alt+P"
      },
      "description": "__MSG_buttonPanorama__"
    },
    "open_windows_view": {
      "suggested_key": {
        "default": "Ctrl+Alt+1"
      },
      "description": "__MSG_menuItemWindows__"
    },
    "open_containers_view": {
      "suggested_key": {
        "default": "Ctrl+Alt+2"
      },
      "description": "__MSG_menuItemMain__"
    },
    "open_sites_view": {
      "suggested_key": {
        "default": "Ctrl+Alt+3"
      },
      "description": "__MSG_menuItemSites__"
    },
    "open_settings_view": {
      "suggested_key": {
        "default": "Ctrl+Alt+5"
      },
      "description": "__MSG_buttonSettings__"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/overrides/content.js"
      ],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_start"
    }
  ],
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "omnibox": {
    "keyword": "ctg"
  },
  "web_accessible_resources": [
    "pages/navigation/confirm.html"
  ]
}
