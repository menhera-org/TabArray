  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@parcel/transformer-typescript-tsc": "^2.8.3",
    "@types/diff": "^5.0.3",
    "@types/glob": "^8.1.0",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^20.1.3",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@types/webextension-polyfill": "^0.10.0",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.2",
    "addons-linter": "^6.4.0",
    "deterministic-zip-ng": "^2.1.1",
    "eslint": "^8.40.0",
    "glob": "^10.2.3",
    "markdown-it": "^13.0.1",
    "parcel": "^2.8.3",
    "parcel-reporter-static-files-copy": "^1.5.0",
    "parcel-resolver-ignore": "^2.1.3",
    "rimraf": "^5.0.0",
    "ts-loader": "^9.4.2",
    "typedoc": "^0.24.7",
    "typescript": "<5.1.0"
  },
  "dependencies": {
    "@menhera/deterministic-json": "^0.1.0",
    "@noble/curves": "^1.0.0",
    "diff": "^5.1.0",
    "webextension-polyfill": "^0.10.0",
    "weeg-containers": "^0.11.0",
    "weeg-domains": "^0.9.0",
    "weeg-events": "^0.4.0",
    "weeg-storage": "^0.5.0",
    "weeg-tabs": "^0.18.0",
    "weeg-types": "^0.4.0",
    "weeg-utils": "^0.11.0"
