    "src/pages/page-action/page-action.html",
    "src/pages/panorama/panorama.html",
    "src/pages/popup-v2/popup-v2.html",
    "src/pages/navigation/open-container.html"
  ],
  "targets": {
    "main": false,
    "default": {
      "context": "browser"
    }
  },
  "parcelIgnore": [
    ".*\\.svg",
    "react.*\\.js"
  ]
